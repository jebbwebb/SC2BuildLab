<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('navbar.ejs') %>

    <main>
      <% if (build) { %>
      <div class="view-container">
        <div class="view">
          <header class="view-title">
            <h1>
              <%= build.title %>(<%= build.race %> vs <%= build.enemy
              %>&nbsp;<%= build.type %>)
            </h1>
            <p class="created-by">
              <% if (build.user) { %> Created by: <%= build.user.username %> <% }
              %>
            </p>
          </header>
        </article>
      </div>
      <% } else { %>
      <h1>No Build Found!</h1>
      <% } %>
      <div class="build-order">
       <p class="build-description"> Build order:<br><%- build.description %></p>
      </div>

      <div class="thumbs-up">
        <form id="ratingForm" method="POST" action="/rating">
          <input type="hidden" name="postId" value="<%= build.postId %>">
          <input type="hidden" name="user" value="<%= user %>">
          
          <button id="thumbsUpButton" type="submit" class="<%= userRated ? 'rated' : '' %>">
            <i class="fas fa-thumbs-up"></i> 
          </button>
        </form>
          <p class="rating">votes:<%= build.ratingCount %></p>
        </form>
      </div>
    

      <script>
        const thumbsUpButton = document.getElementById('thumbsUpButton');
        thumbsUpButton.addEventListener('click', (event) => {
          event.preventDefault();
          const form = document.getElementById('ratingForm');
          form.submit();
          thumbsUpButton.classList.toggle('rated');
        });
      </script>

      <div class="view-comments">
        <div class="comments">
          <% if (build.comments.length > 0) { %> <% for (let comment of
          build.comments) { %>
          <div class="comment">
            <p>
              <strong><%= comment.username %>:</strong> <%= comment.content %>
            </p>
          </div>
          <% } %> <% } else { %>
          <p>No comments yet.Be the first to post!</p>
          <% } %>
        </div>
        <div class="add-comment">
        <form method="POST" action="/add-comment">
          <input type="hidden" name="postId" value="<%= build.postId %>" />
          <textarea required maxlength="120" class="comment-text" name="content" placeholder="Add a comment"></textarea>
          <button class="comment-button" type="submit">Comment</button>
        </form>
      </div>
      </div>
    </main>
  </body>
</html>
